"use client";

import React, { useState, useEffect } from 'react';
import axios from 'axios';
import { motion } from 'framer-motion';

export const XMRPriceDisplay: React.FC = () => {
  const [price, setPrice] = useState<number | null>(null);

  useEffect(() => {
    const fetchPrice = async () => {
      try {
        const response = await axios.get('https://api.coingecko.com/api/v3/simple/price?ids=monero&vs_currencies=usd');
        setPrice(response.data.monero.usd);
      } catch (error) {
        console.error('Error fetching XMR price:', error);
      }
    };

    fetchPrice();
    const interval = setInterval(fetchPrice, 600000); // Update every 10 minutes

    return () => clearInterval(interval);
  }, []);

  return (
    <motion.div 
      className="bg-gradient-to-br from-red-900 to-red-950 p-4 rounded-lg shadow-lg border border-crimson"
      whileHover={{ scale: 1.05 }}
      transition={{ duration: 0.3 }}
    >
      <h3 className="text-xl font-semibold text-white mb-2">XMR Price</h3>
      {price ? (
        <p className="text-2xl font-bold text-white">${price.toFixed(2)}</p>
      ) : (
        <p className="text-white">Loading...</p>
      )}
    </motion.div>
  );
};
